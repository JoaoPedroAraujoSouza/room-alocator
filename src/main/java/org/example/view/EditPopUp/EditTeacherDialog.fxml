<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" styleClass="dialog-background" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controller.ui.EditPopUp.EditTeacherDialogController" stylesheets="@/resources/css/DashBoardBaseStyle.css">
   <children>
      <Label styleClass="title-label" text="Edit Teacher">
         <font>
            <Font name="Bookman Old Style Bold" size="24.0" />
         </font>
      </Label>
      
      <!-- Basic Information Section -->
      <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="550.0" spacing="15.0" styleClass="section-container">
         <children>
            <Label styleClass="section-title" text="Basic Information">
               <font>
                  <Font name="Bookman Old Style Bold" size="18.0" />
               </font>
            </Label>
            
            <VBox spacing="8.0">
               <children>
                  <Label styleClass="field-label" text="Name:">
                     <font>
                        <Font name="Bookman Old Style" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameField" promptText="Enter teacher name" styleClass="input-field" />
               </children>
            </VBox>
            
            <VBox spacing="8.0">
               <children>
                  <Label styleClass="field-label" text="CPF:">
                     <font>
                        <Font name="Bookman Old Style" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="cpfField" promptText="Enter CPF (e.g., 123.456.789-00)" styleClass="input-field" />
               </children>
            </VBox>
            
            <VBox spacing="8.0">
               <children>
                  <Label styleClass="field-label" text="Email:">
                     <font>
                        <Font name="Bookman Old Style" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="emailField" promptText="Enter email address" styleClass="input-field" />
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
      
      <!-- Subject Links Section (Read Only) -->
      <VBox alignment="CENTER_LEFT" prefHeight="250.0" prefWidth="550.0" spacing="15.0" styleClass="section-container">
         <children>
            <Label styleClass="section-title" text="Subject Links (Read Only)">
               <font>
                  <Font name="Bookman Old Style Bold" size="18.0" />
               </font>
            </Label>
            
            <TableView fx:id="tableSubjectLinks" prefHeight="180.0" prefWidth="510.0">
              <columns>
                <TableColumn fx:id="columnSubjectName" prefWidth="200.0" text="Subject Name" />
                <TableColumn fx:id="columnSubjectCode" prefWidth="100.0" text="Subject ID" />
                <TableColumn fx:id="columnSubjectCredits" prefWidth="100.0" text="Hourly Load" />
                <TableColumn fx:id="columnLinkDate" prefWidth="110.0" text="Semester" />
              </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="15.0" />
         </padding>
      </VBox>
      
      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="updateButton" onAction="#handleUpdate" styleClass="save-button" text="Update">
               <font>
                  <Font name="Bookman Old Style Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="cancel-button" text="Cancel">
               <font>
                  <Font name="Bookman Old Style Bold" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox> 